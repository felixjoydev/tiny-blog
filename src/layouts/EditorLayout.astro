---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Write - Tiny Blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-[#FFF1D5] min-h-screen">
    <!-- Content area with 500px max width, centered -->
    <main
      class="w-full max-w-[500px] mx-auto px-4"
      style="padding-top: var(--nav-height);"
    >
      <slot />
    </main>
  </body>
</html>
