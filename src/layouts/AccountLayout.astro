---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Tiny Blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#FFFAEF] flex flex-col min-h-screen">
    <!-- No NavBar for account pages - they have their own nav -->
    <main class="flex-1 w-full">
      <slot />
    </main>
    <footer class="pb-8 flex justify-center">
      <p
        class="text-[#3F331C] font-['Exposure[-20]:Regular',sans-serif] text-[12px] tracking-[0.00625rem]"
      >
        Â© 2026 Tiny. Crafted by Felix Joy
      </p>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
